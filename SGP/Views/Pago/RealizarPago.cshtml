@model SGP.Models.Pago

@{
    ViewBag.Title = "Realizar Pago";
}

<h2>Realizar Pago</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        @Html.Label("Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @ViewBag.venta.fecha
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @ViewBag.venta.Persona.nombres @ViewBag.venta.Persona.apellidos
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Total a Pagar", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            $ @ViewBag.venta.Total
        </div>
    </div>


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.valor, "Ingrese el valor a pagar", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @if (ViewBag.Error != null) { <label class="label-danger">@ViewBag.Error</label> }
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Volver al listado", "ConsultarPagos")
</div>
