@model SGP.Models.DetalleVenta

@{
    ViewBag.Title = "Remover Producto";
}

<h2>¿Desea remover el siguiente producto?</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2">Nombre</label>
        <div class="col-md-10">
            @ViewBag.producto.nombre
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tipo de Producto</label>
        <div class="col-md-10">
            @ViewBag.producto.TipoProducto.nombre
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Descripción</label>
        <div class="col-md-10">
            @ViewBag.producto.descripcion
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Precio unitario</label>
        <div class="col-md-10">
            @ViewBag.producto.precio
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Total", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @*<input type="submit" value="Remover" class="btn btn-default" />*@
            @Html.ActionLink("Remover", "EliminarDetalleVenta", new { id = Model.id}, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "irSeleccionarProducto", new { id = ViewBag.idventa})
</div>
